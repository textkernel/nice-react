{
    "name": "@textkernel/nice-react",
    "author": "Nice! Circle",
    "version": "2.0.1",
    "description": "React Components for Nice!",
    "main": "./dist/nice-react.min.js",
    "license": "MIT",
    "scripts": {
        "build:dev": "webpack --progress --config config/webpack.config.dev.js",
        "build": "webpack --progress --config config/webpack.config.prod.js",
        "storybook": "start-storybook -p 9001 -c ./storybook",
        "build-storybook": "build-storybook --config-dir ./storybook --output-dir ./storybook-static",
        "test": "npm run build && jest",
        "test:watch": "npm run build:dev && jest --watch",
        "test:coverage": "npm run:dev build && jest --coverage",
        "prepublish": "npm run test && npm run build"
    },
    "jest": {
        "setupFiles": [
            "./config/shim.js",
            "./config/jest.setup.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    },
    "browserify": {
        "transform": [
            "babelify"
        ]
    },
    "dependencies": {
        "classnames": "^2.2.5",
        "prop-types": "^15.5.10"
    },
    "peerDependencies": {
        "react": "^15.5.0 || ^16.0.0",
        "react-dom": "^15.5.0 || ^16.0.0"
    },
    "devDependencies": {
        "@storybook/addon-info": "^3.2.16",
        "@storybook/addon-knobs": "^3.2.16",
        "@storybook/react": "^3.2.16",
        "babel-core": "^6.26.0",
        "babel-eslint": "^7.2.3",
        "babel-jest": "^21.2.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "css-loader": "^0.28.11",
        "enzyme": "^3.1.1",
        "enzyme-adapter-react-16": "^1.0.4",
        "enzyme-to-json": "^3.2.2",
        "eslint": "^3.19.0",
        "eslint-config-airbnb": "^15.0.1",
        "eslint-import-resolver-webpack": "^0.8.3",
        "eslint-loader": "^1.8.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^5.0.1",
        "eslint-plugin-react": "^7.1.0",
        "file-loader": "^0.11.2",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^21.2.1",
        "node-sass": "^4.9.0",
        "react": "^16.0.0",
        "react-dom": "^16.0.0",
        "react-hot-loader": "^1.3.1",
        "react-test-renderer": "^16.0.0",
        "sass-loader": "^7.0.3",
        "style-loader": "^0.21.0",
        "url-loader": "^1.0.1",
        "webpack": "^3.12.0",
        "webpack-cleanup-plugin": "^0.5.1"
    }
}
